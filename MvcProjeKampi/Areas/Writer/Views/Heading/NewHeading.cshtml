@model EntityLayer.Concretes.Heading

@{
    ViewBag.Title = "NewHeading";
    Layout = "~/Areas/Writer/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Başlık Ekleme</h2>
<br />
@using (Html.BeginForm("NewHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Kategori")
        @Html.DropDownListFor(
            x => x.CategoryID,
            new SelectList((List<SelectListItem>)ViewBag.categoryValues, "Value", "Text", 0),
            "Kategori Seçiniz",
            new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info">Başlık Ekle</button>
    </div>
}

