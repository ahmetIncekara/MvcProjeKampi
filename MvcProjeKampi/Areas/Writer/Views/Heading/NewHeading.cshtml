@model EntityLayer.Concretes.Heading

@{
    ViewBag.Title = "NewHeading";
    Layout = "~/Areas/Writer/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Başlık Ekleme</h2>
<br />
@using (Html.BeginForm("NewHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.TextBoxFor(x=>x.WriterID, new { @class = "form-control", @Value = ViewBag.WriterID })
        <br />
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categoryValues, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Başlık Ekle</button>
    </div>
}

