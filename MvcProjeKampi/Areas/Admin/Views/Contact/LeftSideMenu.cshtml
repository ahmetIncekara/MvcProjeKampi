<div class="card">
    <div class="card-header">
        <h3 class="card-title">Seçenekler</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item active">
                <a href="/Admin/Contact/Index" class="nav-link">
                    <i class="fas fa-mail-bulk"></i> İletişim
                    @if (Convert.ToString(ViewBag.ContactCount) != "0")
                    {
                        <span class="badge bg-primary float-right">@ViewBag.ContactCount</span>
                    }

                </a>
            </li>
            <li class="nav-item active">
                <a href="/Admin/Message/Inbox" class="nav-link">
                    <i class="fas fa-inbox"></i> Gelen Mesajlar
                    @if (Convert.ToString(ViewBag.ReceiveMessageCount) != "0")
                    {
                        <span class="badge bg-primary float-right">@ViewBag.ReceiveMessageCount</span>
                    }
                    </a>
            </li>
            <li class="nav-item active">
                <a href="/Admin/Message/Sendbox" class="nav-link">
                    <i class="far fa-envelope"></i> Gönderilen Mesajlar
                    @*@if (Convert.ToString(ViewBag.SendMessageCount) != "0")
                    {
                        <span class="badge bg-primary float-right">@ViewBag.SendMessageCount</span>
                    }*@
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="far fa-file-alt"></i> Taslaklar
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-filter"></i> Spam
                    <span class="badge bg-warning float-right">65</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="far fa-trash-alt"></i> Çöp Kutusu
                </a>
            </li>
        </ul>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
